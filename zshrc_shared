# Load version control information
autoload -Uz vcs_info

precmd() {
  vcs_info

  # Make a line of 60 '#'
  local ruler
  ruler=$(printf '%*s' 80 '' | tr ' ' '#')

  # White '#' line
  print -P "%F{white}$ruler%f"
  # or equivalently: print -P "%F{255}$ruler%f"
}

# Git branch formatting
zstyle ':vcs_info:git:*' formats ' (%F{yellow}%b%f)'

setopt PROMPT_SUBST

# Red prompt
PROMPT='%F{red}%n@%m %c${vcs_info_msg_0_}: %f'

alias spython='source ~/Github/bin/.venv/bin/activate'
